{% extends 'base.html.twig' %}

{% block title %}Frog index{% endblock %}

{% block body %}
    <h1>Frog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Specie</th>
                <th>Size</th>
                <th>SkinColor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for frog in frogs %}
            <tr>
                <td>{{ frog.id }}</td>
                <td>{{ frog.specie }}</td>
                <td>{{ frog.size }}</td>
                <td>{{ frog.skinColor }}</td>
                <td>
                    <a href="{{ path('app_frog_show', {'id': frog.id}) }}">show</a>
                    <a href="{{ path('app_frog_edit', {'id': frog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_frog_new') }}">Create new</a>
{% endblock %}
